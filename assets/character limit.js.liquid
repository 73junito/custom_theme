const descriptionField = document.getElementById("description-field");
const charCount = document.getElementById("char-count");
const maxChars = 2000; // set the maximum character limit

descriptionField.addEventListener("input", function() {
  const remainingChars = maxChars - descriptionField.value.length;
  charCount.innerHTML = remainingChars; // update the remaining character count
  
  if (remainingChars < 0) {
    descriptionField.value = descriptionField.value.substring(0, maxChars); // truncate the input text if it exceeds the maximum character limit
    charCount.innerHTML = 0;
  }
});
