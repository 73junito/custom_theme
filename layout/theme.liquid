<!doctype html>
<html lang="{{ shop.locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title }}</title>
    <meta name="description" content="{{ page_description }}">
    <!-- Additional meta tags and SEO-related information -->

    <!-- Stylesheets -->
    {{ 'styles.css' | asset_url | stylesheet_tag }}
    {% if settings.use_custom_css %}
      {{ 'custom.css' | asset_url | stylesheet_tag }}
    {% endif %}

    <!-- External Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Other external scripts -->

    <!-- Shopify Header Scripts -->
    {{ content_for_header }}

    <!-- Custom JavaScript -->
    {{ 'custom.js' | asset_url | script_tag }}

    <!-- Additional Head Content -->
  </head>

  <body class="{{ page_type }} {% if template contains 'product' %}single-product{% endif %}">
    <!-- Header Section -->
    {% include 'header' %}

    <!-- Main Content -->
    <main id="main-content">
      {{ content_for_layout }}
    </main>

    <!-- Footer Section -->
    {% include 'footer' %}

    <!-- Shopify Footer Scripts -->
    {{ content_for_footer }}

    <!-- Custom Footer Scripts -->
    {{ 'custom-footer.js' | asset_url | script_tag }}

    <!-- Additional Body Content -->
  </body>
</html>
