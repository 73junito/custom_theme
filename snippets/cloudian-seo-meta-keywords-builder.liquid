{% if shop.metafields.cloudian-seo-keyword.status == 1 %}
<!-- The HTML Meta Keywords Builder app is now Enabled -->
{% elsif shop.metafields.cloudian-seo-keyword.status == 0 %}
<!-- The HTML Meta Keywords Builder app is now Disabled -->
{% endif %}
{% if content_for_header contains "sapp.cloudianseo" %}
  {% if shop.metafields.cloudian-seo-keyword.status == 1 %}
  {%- liquid
    assign keywords = ''
    if request.page_type == 'index'
      assign keywords = shop.metafields.cloudian-seo-keyword.keywords
    elsif request.page_type == 'product'
      assign keywords = product.metafields.cloudian-seo-keyword.keywords
    elsif request.page_type == 'collection'
      assign keywords = collection.metafields.cloudian-seo-keyword.keywords
    elsif request.page_type == 'page'
      assign keywords =  page.metafields.cloudian-seo-keyword.keywords
    elsif request.page_type == 'article'
      assign keywords = article.metafields.cloudian-seo-keyword.keywords
    elsif request.page_type == 'blog'
      assign keywords = blog.metafields.cloudian-seo-keyword.keywords
    endif
  %}
<meta name="keywords" content="{{ keywords }}">
  {% endif %}
{% endif %}